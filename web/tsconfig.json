{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "outDir": "./js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true
  },
  "include": ["ts/**/*.ts"],
  "exclude": ["node_modules"]
}
